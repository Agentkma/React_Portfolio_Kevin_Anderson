{
    "plugins": [
        "testing-library",
        "jest-dom",
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:jest-dom/recommended",
        "plugin:testing-library/recommended",
        "plugin:testing-library/react",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 15,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/display-name": [
            "warn",
            {
                "ignoreTranspilerName": true
            }
        ]
    }
}